---
export type Props = { href?: string; title?: string; right?: string; description?: string }
const { href, title, right, description } = Astro.props
const isExternal = href && !href.startsWith('/')
const target = isExternal ? '_blank' : undefined
---

<li>
	<a class='group mb-12 block break-inside-avoid outline-none' href={href} target={target}>
		<div class='flex justify-between'>
			{title && <h3 class='font-medium text-slate-12 group-focus-visible:underline'>{title}</h3>}
			{right && <div class='text-slate-8'>{right}</div>}
		</div>
		{description && <p class='mt-2 max-w-[28em] font-serif text-slate-10'>{description}</p>}
	</a>
</li>
