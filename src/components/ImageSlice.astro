---
type Props = { caption?: string }
const { caption } = Astro.props

import Container from '@components/Container.astro'
---

<section class='image-slice'>
	<figure class='text-md bg-slate-2 font-serif text-slate-12'>
		<slot />
		<Container class='py-5'>
			<figcaption><slot name='caption' /></figcaption>
		</Container>
	</figure>
<section>

<style is:global>
	.image-slice a {
		text-decoration: underline;
	}
</style>