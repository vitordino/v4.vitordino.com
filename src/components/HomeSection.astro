---
import Row from './Row.astro'
import Column from './Column.astro'

export type Props = { title?: string }
const { title } = Astro.props
---

<section class='relative lg:mb-16'>
	<div class='z-10 hidden border-b border-slate-4 bg-slate-1 lg:block'></div>
	<Row>
		<Column
			xs={16}
			lg={3}
			xl={2}
			class='sticky top-0 border-b border-slate-4 bg-slate-1 py-3 lg:relative lg:top-0 lg:-mb-12 lg:border-none lg:bg-transparent lg:pb-0 lg:pt-0'
		>
			<h2 class='px-8 text-slate-9 md:px-4 lg:sticky lg:top-4 lg:mt-4 lg:px-0'>{title}</h2>
		</Column>
		<Column xs={0} xl={2} xxl={3} />
		<Column xs={16} lg={12} xl={8} xxl={6}>
			<slot />
		</Column>
	</Row>
</section>
